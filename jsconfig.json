{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "test": ["test/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@db/*": ["src/db/*"],
      "@models/*": ["src/models/*"],
      "@validations/*": ["src/validations/*"],
      "@services/*": ["src/services/*"]
    }
  },
  "exclude": ["node_modules"]
}
